{
  "root": true,
  "extends": ["next/core-web-vitals", "eslint:recommended", "plugin:import/recommended", "prettier"],
  "plugins": ["unused-imports"],
  "rules": {
    "unused-imports/no-unused-imports": "error",
    "import/order": ["warn", { "alphabetize": { "order": "asc", "caseInsensitive": true } }]
  },
  "overrides": [
    {
      "files": ["**/*.test.*", "**/*.spec.*"],
      "env": { "jest": true }
    }
  ]
}
